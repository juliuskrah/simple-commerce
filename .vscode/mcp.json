{
	"servers": {
		"shopify-dev": {
			"command": "npx",
			"args": [
				"-y",
				"@shopify/dev-mcp@latest"
			],
			"type": "stdio"
		},
		"github": {
			"url": "https://api.githubcopilot.com/mcp/",
			"type": "http"
		},
		"Framelink Figma MCP": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"figma-developer-mcp@0.5.0",
				"--figma-api-key=${input:figmaApiKey}",
				"--stdio"
			],
			"env": {}
		}
	},
	"inputs": [
		{
            "id": "figmaApiKey",
			"type": "promptString",
			"description": "Figma API Key",
			"password": true
		}
	]
}