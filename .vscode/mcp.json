{
	"servers": {
		"github": {
			"url": "https://api.githubcopilot.com/mcp/",
			"type": "http"
		},
		"Framelink Figma MCP": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"figma-developer-mcp@0.5.0",
				"--figma-api-key=${input:figmaApiKey}",
				"--stdio"
			]
		},
		"playwright": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@playwright/mcp@latest"
			]
		},
		"postgres": {
			"type": "stdio",
			"command": "docker",
			"args": [
				"run",
				"--rm",
				"-i",
				"--network",
				"simple-commerce_default",
				"mcp/postgres",
				"${input:postgresConnection}",
			]
		}
	},
	"inputs": [
		{
			"id": "figmaApiKey",
			"type": "promptString",
			"description": "Figma API Key",
			"password": true
		},
		{
			"id": "postgresConnection",
			"type": "promptString",
			"description": "Postgres Connection String",
			"default": "postgresql://simple_commerce:simple_commerce@simple-commerce-postgres-1:5432/simple_commerce"
		}
	]
}